<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZieDitApp.View.LoginPage"
             Title="Login">
    <VerticalStackLayout Spacing="10" Padding="10">
        <Label Text="Zie Dit" VerticalOptions="Center" HorizontalOptions="Start" Style="{StaticResource LabelStyle1Red}"/>
        <Label Text="Login" Style="{StaticResource LabelStyle2Black}"/>
        <Entry Placeholder="UserName" Style="{StaticResource EntryStyle}"/>
        <Entry Placeholder="PassWord" Style="{StaticResource EntryStyle}"/>
        <Button Text="Login" Style="{StaticResource ButtonStyleRed}" Clicked="OnLoginClicked"/>
    </VerticalStackLayout>
</ContentPage>